@model List<VulnManager.Models.Cve>

@{
    ViewData["Title"] = "Vulnerabilities list";
}

<h1>CVE list</h1>

<form method="post" asp-action="UpdateCves" class="inline-form">
    <input type="submit" value="Update CVSS" class="btn btn-dark" />
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">CVE</th>
            <th scope="col">CVSS</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach(var cve in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => cve.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => cve.CVSS)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>